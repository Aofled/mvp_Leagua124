<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/iv_team_logo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_team_created_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="основана"
        app:layout_constraintEnd_toStartOf="@+id/tv_mid_age_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_team_logo" />


    <TextView
        android:id="@+id/tv_mid_age_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_team_created"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="ср. возраст"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_team_logo" />


    <TextView
        android:id="@+id/tv_tk_win_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="тр. выиграно"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_mid_age_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_team_logo" />

    <TextView
        android:id="@+id/tv_team_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="2012"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_team_created_title"
        app:layout_constraintStart_toStartOf="@+id/tv_team_created_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_created_title" />

    <TextView
        android:id="@+id/tv_mid_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="23.5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mid_age_title"
        app:layout_constraintStart_toStartOf="@+id/tv_mid_age_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_mid_age_title" />


    <TextView
        android:id="@+id/tv_tk_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_tk_win_title"
        app:layout_constraintStart_toStartOf="@+id/tv_tk_win_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_tk_win_title" />


    <TextView
        android:id="@+id/tv_goals_scored_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="забито"
        app:layout_constraintEnd_toEndOf="@+id/tv_team_created_title"
        app:layout_constraintStart_toStartOf="@+id/tv_team_created_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_created" />

    <TextView
        android:id="@+id/tv_goals_scored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="15"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_team_created_title"
        app:layout_constraintStart_toStartOf="@+id/tv_team_created_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_goals_scored_title" />

    <TextView
        android:id="@+id/tv_goals_missing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="пропущено"
        app:layout_constraintEnd_toEndOf="@+id/tv_mid_age_title"
        app:layout_constraintStart_toStartOf="@+id/tv_mid_age_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_mid_age" />

    <TextView
        android:id="@+id/tv_goals_missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mid_age_title"
        app:layout_constraintStart_toStartOf="@+id/tv_mid_age_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_goals_missing_title" />

    <TextView
        android:id="@+id/tv_difference_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="заб/про"
        app:layout_constraintEnd_toEndOf="@+id/tv_tk_win_title"
        app:layout_constraintStart_toStartOf="@+id/tv_tk_win_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_tk_win" />

    <TextView
        android:id="@+id/tv_difference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_difference_title"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="3.75"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_tk_win_title"
        app:layout_constraintStart_toStartOf="@+id/tv_tk_win_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_difference_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_goals_missing"
        android:background="@drawable/border_yes"
        >

        <TextView
            android:id="@+id/tv_id_player"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:text="№"/>


        <TextView
            android:id="@+id/tv_player_age"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="лет"
            app:layout_constraintEnd_toStartOf="@+id/tv_player_goals" />

        <TextView
            android:id="@+id/tv_player_goals"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="заб"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>